<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/title_bg" >

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="12dp"
            android:paddingRight="50dp"
            android:src="@drawable/btn_title_back" />

        <RelativeLayout
            android:id="@+id/title_iamgeview_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="40dp"
            android:visibility="invisible" >

            <ImageView
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/title_share" />

            <ImageView
                android:id="@+id/title_iamgeview"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user_logo" />
            
            <!-- <com.tomoon.launcher.view.RoundRectImageView 
                android:id="@+id/title_iamgeview_roundrect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_shape"
                android:visibility="gone"
                /> -->
            
        </RelativeLayout>

        <TextView
            android:id="@+id/title_middle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/title_text"
            android:textSize="@dimen/title_new_font_large" />

        
         <!-- android:paddingLeft="20dp"
            android:paddingRight="6dp" -->
        <ImageView
            android:id="@+id/title_right_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/title_paizhao"
           
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_right_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="16dp"
            android:textColor="@color/title_text"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_right_textview1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/title_right_textview"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:textColor="@color/title_text"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/title_right_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/title_text"
            android:textSize="16sp"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#dfdfdf" >
    </LinearLayout>

</LinearLayout>