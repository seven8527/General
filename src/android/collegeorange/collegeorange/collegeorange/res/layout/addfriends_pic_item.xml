<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pic_layout"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout        
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_gravity="center" 
        >

        <ImageView
            android:id="@+id/pic_imageview"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@color/black" />

        <ImageView
            android:id="@+id/pic_imageview_mark"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/lvjing2" />

        <ImageView
            android:id="@+id/tip_imageview"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignLeft="@+id/pic_imageview"
            android:layout_alignTop="@+id/pic_imageview"
            android:background="@drawable/alert"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/gray_text"
        android:visibility="gone" />

</LinearLayout>