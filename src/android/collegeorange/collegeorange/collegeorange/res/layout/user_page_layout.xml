<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/title_user_bg"
         >
         
        <RelativeLayout
	        android:id="@+id/title_layout"
	        android:layout_width="match_parent"
	        android:layout_alignParentTop="true"
	        android:layout_height="43dp"
	         >     

	        <TextView
	            android:id="@+id/title_middle1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerHorizontal="true"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="80dp"
	            android:layout_marginRight="80dp"
	            android:ellipsize="end"
	            android:maxLines="1"
	            android:textColor="@color/white"
	            android:textSize="@dimen/title_new_font_large" />
	
	        
	       
	
	        <TextView
	            android:id="@+id/title_right_textview"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:gravity="center"
	            android:paddingLeft="20dp"
	            android:paddingRight="16dp"
	            android:textColor="@color/white"
	            android:textSize="16sp"
	            android:visibility="gone" />

       
    	</RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_below="@+id/title_layout"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_marginTop="20dp"
                android:src="@drawable/user_logo" />

            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="用户名"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/go_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_voice_start_selected"
                android:padding="8dp"
                android:text="立即登陆"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/horizontal_line" />

    <RelativeLayout
        android:id="@+id/device_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_color_write_to_grey"
        android:padding="16dp" >

        <TextView
            android:id="@+id/user_sex_text"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lines="1"
            android:text="设备管理"
            android:textColor="@color/market_color"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/newt_page_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/list_page_btn" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/horizontal_line" />

    <RelativeLayout
        android:id="@+id/about_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_color_write_to_grey"
        android:padding="16dp"
        android:visibility="visible" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:lines="1"
            android:text="@string/about_us"
            android:textColor="@color/market_color"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/list_page_btn" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/horizontal_line"
        android:visibility="visible" />

    <Button
        android:id="@+id/log_out_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/body_button7_click"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>