<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content" >

        <android.support.v4.view.ViewPager
            android:id="@+id/bannerViewPager"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="160dp"
             >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/ad_images_layout"
            android:layout_below="@+id/bannerViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/circleItem0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="onCircleItemClicked"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/circleItem1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="onCircleItemClicked"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/circleItem2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="onCircleItemClicked"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/circleItem3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="onCircleItemClicked"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <LinearLayout                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/commonMargin"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/circleItem4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="onCircleItemClicked"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/circleItem5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="onCircleItemClicked"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/circleItem6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="onCircleItemClicked"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/circleItem7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:onClick="onCircleItemClicked"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>

       

    </RelativeLayout>
